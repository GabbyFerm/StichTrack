<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StitchTrack.MAUI.Controls.OnboardingCard"
             x:Name="This">

  <!-- Semi-transparent overlay -->
  <Grid BackgroundColor="#CC000000">

    <!-- Centered card -->
    <Frame Margin="30"
           Padding="30,40"
           CornerRadius="20"
           BackgroundColor="White"
           HasShadow="True"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           MaximumWidthRequest="400">

      <VerticalStackLayout Spacing="20">

        <!-- Icon -->
        <Label Text="ðŸ§¶"
               FontSize="60"
               HorizontalOptions="Center" />

        <!-- Title -->
        <Label Text="Welcome to StitchTrack"
               FontSize="24"
               FontFamily="MontserratBold"
               TextColor="#424B54"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <!-- Subtitle -->
        <Label Text="Start counting rows immediately"
               FontSize="16"
               FontFamily="MontserratMedium"
               TextColor="#666"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <Label Text="No signup required"
               FontSize="16"
               FontFamily="MontserratMedium"
               TextColor="#666"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               Margin="0,-15,0,0" />

        <!-- Features list -->
        <VerticalStackLayout Spacing="10" Margin="0,10,0,0">

          <HorizontalStackLayout Spacing="10">
            <Label Text="âœ“"
                   FontSize="20"
                   TextColor="#4CAF50"
                   VerticalOptions="Center" />
            <Label Text="Your projects are saved locally"
                   FontSize="14"
                   TextColor="#424B54"
                   VerticalOptions="Center" />
          </HorizontalStackLayout>

          <HorizontalStackLayout Spacing="10">
            <Label Text="âœ“"
                   FontSize="20"
                   TextColor="#4CAF50"
                   VerticalOptions="Center" />
            <Label Text="Private by default - no tracking"
                   FontSize="14"
                   TextColor="#424B54"
                   VerticalOptions="Center" />
          </HorizontalStackLayout>

          <HorizontalStackLayout Spacing="10">
            <Label Text="âœ“"
                   FontSize="20"
                   TextColor="#4CAF50"
                   VerticalOptions="Center" />
            <Label Text="Works offline, always"
                   FontSize="14"
                   TextColor="#424B54"
                   VerticalOptions="Center" />
          </HorizontalStackLayout>

        </VerticalStackLayout>

        <!-- Primary Button: Get Started -->
        <Button Text="Get Started ðŸš€"
                Command="{Binding Source={x:Reference this}, Path=GetStartedCommand}"
                BackgroundColor="#E1AD37"
                TextColor="White"
                FontFamily="MontserratSemiBold"
                FontSize="16"
                HeightRequest="50"
                CornerRadius="25"
                Margin="0,20,0,0" />

        <!-- Divider -->
        <BoxView HeightRequest="1"
                 BackgroundColor="#E0E0E0"
                 Margin="0,10,0,10" />

        <!-- Secondary Section -->
        <Label Text="Want automatic backup?"
               FontSize="14"
               FontFamily="MontserratMedium"
               TextColor="#424B54"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <!-- Secondary Button: Enable Sync -->
        <Button Text="Enable Backup & Sync â˜ï¸"
                Command="{Binding Source={x:Reference this}, Path=EnableSyncCommand}"
                BackgroundColor="Transparent"
                TextColor="#FE64A3"
                BorderColor="#FE64A3"
                BorderWidth="2"
                FontFamily="MontserratSemiBold"
                FontSize="14"
                HeightRequest="45"
                CornerRadius="22" />

        <!-- Tertiary Button: Maybe Later -->
        <Button Text="Maybe Later"
                Command="{Binding Source={x:Reference this}, Path=MaybeLaterCommand}"
                BackgroundColor="Transparent"
                TextColor="#999"
                FontFamily="MontserratMedium"
                FontSize="12"
                Margin="0,-10,0,0" />

        <!-- Note -->
        <Label Text="(Cloud sync coming in Phase 3)"
               FontSize="10"
               TextColor="#999"
               HorizontalOptions="Center"
               Margin="0,-10,0,0" />

      </VerticalStackLayout>

    </Frame>

  </Grid>

</ContentView>
