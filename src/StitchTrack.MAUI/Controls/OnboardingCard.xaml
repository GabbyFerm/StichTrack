<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StitchTrack.MAUI.Controls.OnboardingCard">

  <!-- Semi-transparent overlay -->
  <!-- BindingContext is set in code-behind to parent page's ViewModel -->
  <Grid BackgroundColor="#80000000">

    <!-- Centered onboarding card -->
    <Frame BackgroundColor="White"
           CornerRadius="20"
           Padding="30"
           Margin="20"
           MaximumWidthRequest="400"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           HasShadow="True">

      <VerticalStackLayout Spacing="20">

        <!-- Welcome Header -->
        <Label Text="Welcome to StitchTrack"
               FontFamily="MontserratBold"
               FontSize="24"
               TextColor="#424B54"
               HorizontalOptions="Center" />

        <!-- Feature List -->
        <VerticalStackLayout Spacing="12">

          <!-- Feature 1: Local Storage -->
          <HorizontalStackLayout Spacing="10">
            <Label Text="âœ“"
                   FontSize="20"
                   TextColor="#E1AD37"
                   VerticalOptions="Center" />
            <Label Text="All your projects stored locally"
                   FontFamily="MontserratMedium"
                   FontSize="14"
                   TextColor="#424B54"
                   VerticalOptions="Center" />
          </HorizontalStackLayout>

          <!-- Feature 2: Privacy -->
          <HorizontalStackLayout Spacing="10">
            <Label Text="âœ“"
                   FontSize="20"
                   TextColor="#E1AD37"
                   VerticalOptions="Center" />
            <Label Text="Your data stays on your device"
                   FontFamily="MontserratMedium"
                   FontSize="14"
                   TextColor="#424B54"
                   VerticalOptions="Center" />
          </HorizontalStackLayout>

          <!-- Feature 3: Offline -->
          <HorizontalStackLayout Spacing="10">
            <Label Text="âœ“"
                   FontSize="20"
                   TextColor="#E1AD37"
                   VerticalOptions="Center" />
            <Label Text="Works completely offline"
                   FontFamily="MontserratMedium"
                   FontSize="14"
                   TextColor="#424B54"
                   VerticalOptions="Center" />
          </HorizontalStackLayout>

        </VerticalStackLayout>

        <!-- Divider -->
        <BoxView HeightRequest="1"
                 BackgroundColor="#E8E8E8"
                 Margin="0,10" />

        <!-- Action Buttons -->
        <VerticalStackLayout Spacing="12">

          <!-- Primary Button: Get Started -->
          <Button Text="Get Started ðŸš€"
                  Command="{Binding GetStartedCommand}"
                  BackgroundColor="#E1AD37"
                  TextColor="White"
                  FontFamily="MontserratSemiBold"
                  FontSize="16"
                  HeightRequest="50"
                  CornerRadius="10" />

          <!-- Secondary Button: Enable Sync -->
          <Button Text="Enable Backup &amp; Sync â˜ï¸"
                  Command="{Binding EnableSyncCommand}"
                  BackgroundColor="Transparent"
                  TextColor="#FE64A3"
                  BorderColor="#FE64A3"
                  BorderWidth="2"
                  FontFamily="MontserratSemiBold"
                  FontSize="14"
                  HeightRequest="50"
                  CornerRadius="10" />

          <!-- Tertiary Button: Maybe Later -->
          <Button Text="Maybe Later"
                  Command="{Binding MaybeLaterCommand}"
                  BackgroundColor="Transparent"
                  TextColor="#999"
                  FontFamily="MontserratMedium"
                  FontSize="14"
                  HeightRequest="40" />

        </VerticalStackLayout>

        <!-- Phase 3 Note -->
        <Label Text="(Cloud sync coming in Phase 3)"
               FontFamily="MontserratMedium"
               FontSize="10"
               TextColor="#999"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />

      </VerticalStackLayout>

    </Frame>

  </Grid>

</ContentView>
