<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- Base Label Style -->
  <Style TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratRegular" />
    <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
  </Style>

  <!-- Header Label -->
  <Style x:Key="HeaderLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="24" />
    <Setter Property="TextColor" Value="{StaticResource TextOnGold}" />
    <Setter Property="HorizontalOptions" Value="Center" />
  </Style>

  <!-- Subtitle Label -->
  <Style x:Key="SubtitleLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratMedium" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
  </Style>

  <!-- Project Title -->
  <Style x:Key="ProjectTitleLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
  </Style>

  <!-- Counter Display -->
  <Style x:Key="CounterLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratExtraBold" />
    <Setter Property="FontSize" Value="90" />
    <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    <Setter Property="HorizontalOptions" Value="Center" />
  </Style>

  <!-- Primary Button (Pink) -->
  <Style x:Key="PrimaryButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource StitchPink}" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="HeightRequest" Value="50" />
    <Setter Property="Padding" Value="20,0" />
  </Style>

  <!-- Secondary Button (Dark Gray) -->
  <Style x:Key="SecondaryButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource StitchDarkGray}" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="HeightRequest" Value="50" />
    <Setter Property="Padding" Value="20,0" />
  </Style>

  <!-- Outline Button -->
  <Style x:Key="OutlineButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{StaticResource StitchPink}" />
    <Setter Property="BorderColor" Value="{StaticResource StitchPink}" />
    <Setter Property="BorderWidth" Value="2" />
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="HeightRequest" Value="45" />
    <Setter Property="Padding" Value="15,0" />
  </Style>

  <!-- Text Button -->
  <Style x:Key="TextButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{StaticResource StitchPink}" />
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="Padding" Value="10,5" />
  </Style>

  <!-- Counter Increase Button -->
  <Style x:Key="IncreaseButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ButtonIncrease}" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="HeightRequest" Value="50" />
    <Setter Property="Text" Value="+ INCREASE" />
  </Style>

  <!-- Counter Decrease Button -->
  <Style x:Key="DecreaseButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ButtonDecrease}" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="HeightRequest" Value="50" />
    <Setter Property="Text" Value="- DECREASE" />
  </Style>

  <!-- Card Frame -->
  <Style x:Key="CardFrame" TargetType="Frame">
    <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="HasShadow" Value="True" />
    <Setter Property="Padding" Value="15" />
    <Setter Property="Margin" Value="15,10" />
  </Style>

  <!-- Counter Card -->
  <Style x:Key="CounterCard" TargetType="Frame">
    <Setter Property="BackgroundColor" Value="{StaticResource CounterBackground}" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="HasShadow" Value="False" />
    <Setter Property="Padding" Value="20" />
    <Setter Property="BorderColor" Value="Transparent" />
  </Style>

  <!-- Entry Style -->
  <Style TargetType="Entry">
    <Setter Property="BackgroundColor" Value="{StaticResource StitchLightGray}" />
    <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    <Setter Property="FontFamily" Value="MontserratRegular" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="HeightRequest" Value="50" />
  </Style>

  <!-- Editor Style -->
  <Style TargetType="Editor">
    <Setter Property="BackgroundColor" Value="{StaticResource StitchLightGray}" />
    <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    <Setter Property="FontFamily" Value="MontserratRegular" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="HeightRequest" Value="120" />
  </Style>

  <!-- Badge Frame -->
  <Style x:Key="BadgeFrame" TargetType="Frame">
    <Setter Property="BackgroundColor" Value="{StaticResource StitchDarkGray}" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="10,5" />
    <Setter Property="HasShadow" Value="False" />
  </Style>

  <!-- Badge Label -->
  <Style x:Key="BadgeLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="HorizontalOptions" Value="Center" />
    <Setter Property="VerticalOptions" Value="Center" />
  </Style>

  <!-- Icon Label -->
  <Style x:Key="IconLabel" TargetType="Label">
    <Setter Property="FontSize" Value="20" />
    <Setter Property="HorizontalOptions" Value="Center" />
    <Setter Property="VerticalOptions" Value="Center" />
  </Style>

  <!-- Tab Bar Icons -->
  <Style x:Key="TabBarLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratMedium" />
    <Setter Property="FontSize" Value="10" />
    <Setter Property="HorizontalOptions" Value="Center" />
    <Setter Property="VerticalOptions" Value="Center" />
  </Style>

</ResourceDictionary>
