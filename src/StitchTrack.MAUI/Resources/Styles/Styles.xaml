<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- ============================================ -->
  <!-- TYPOGRAPHY STYLES                            -->
  <!-- ============================================ -->

  <!-- Page Title (e.g., "QUICK ROW COUNTER") -->
  <Style x:Key="PageTitleLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="18" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
    <Setter Property="HorizontalOptions" Value="Center" />
    <Setter Property="Margin" Value="0,15,0,10" />
  </Style>

  <!-- Header Title for colored header bars (always white text) -->
  <Style x:Key="HeaderTitle" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="18" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="HorizontalOptions" Value="Center" />
    <Setter Property="VerticalOptions" Value="Center" />
  </Style>

  <!-- Section Header (e.g., "Active projects", "Your stats") -->
  <Style x:Key="SectionHeaderLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
    <Setter Property="Margin" Value="0,10,0,5" />
  </Style>

  <!-- Project Title / Card Title -->
  <Style x:Key="CardTitleLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
    <Setter Property="LineBreakMode" Value="TailTruncation" />
  </Style>

  <!-- Body Text -->
  <Style x:Key="BodyLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratRegular" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
    <Setter Property="LineBreakMode" Value="WordWrap" />
  </Style>

  <!-- Secondary Text (timestamps, metadata) -->
  <Style x:Key="SecondaryLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratMedium" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}" />
  </Style>

  <!-- Counter Display (Large Number) -->
  <Style x:Key="CounterLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratExtraBold" />
    <Setter Property="FontSize" Value="96" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
    <Setter Property="HorizontalOptions" Value="Center" />
    <Setter Property="VerticalOptions" Value="Center" />
  </Style>

  <!-- Caption Text (hints, tips) -->
  <Style x:Key="CaptionLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratMedium" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextSecondary}}" />
    <Setter Property="HorizontalTextAlignment" Value="Center" />
  </Style>

  <!-- Link Text -->
  <Style x:Key="LinkLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="TextColor" Value="{StaticResource LinkColor}" />
  </Style>

  <!-- ============================================ -->
  <!-- BUTTON STYLES                                -->
  <!-- ============================================ -->

  <!-- Primary Button (Increase, Create, Save) -->
  <Style x:Key="PrimaryButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ButtonIncrease}" />
    <Setter Property="TextColor" Value="{StaticResource ButtonTextOnGold}" />
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="HeightRequest" Value="50" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Margin" Value="0,5" />
  </Style>

  <!-- Secondary Button (Decrease, Cancel) -->
  <Style x:Key="SecondaryButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ButtonDecrease}" />
    <Setter Property="TextColor" Value="{StaticResource ButtonTextOnDark}" />
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="HeightRequest" Value="50" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Margin" Value="0,5" />
  </Style>

  <!-- Cancel/Delete Button -->
  <Style x:Key="CancelButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ButtonCancel}" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="HeightRequest" Value="50" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Margin" Value="0,5" />
  </Style>

  <!-- Text Button (Undo, Reset, small actions) -->
  <Style x:Key="TextButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}" />
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="Padding" Value="10,5" />
    <Setter Property="HeightRequest" Value="35" />
  </Style>

  <!-- Light Text Button (Undo, Reset in dark mode) -->
  <Style x:Key="LightTextButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark=White}" />
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="Padding" Value="10,5" />
    <Setter Property="HeightRequest" Value="35" />
  </Style>



  <!-- Icon Button (Small circular buttons) -->
  <Style x:Key="IconButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightIconColor}, Dark={StaticResource DarkIconColor}}" />
    <Setter Property="FontSize" Value="20" />
    <Setter Property="WidthRequest" Value="40" />
    <Setter Property="HeightRequest" Value="40" />
    <Setter Property="CornerRadius" Value="20" />
    <Setter Property="Padding" Value="0" />
  </Style>

  <!-- Outline Button (Save to project, Continue counting) -->
  <Style x:Key="OutlineButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource BrandSave}, Dark={StaticResource BrandGold}}" />
    <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource BrandSave}, Dark={StaticResource BrandGold}}" />
    <Setter Property="BorderWidth" Value="2" />
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="HeightRequest" Value="50" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Margin" Value="0,5" />
  </Style>


  <!-- Small Button (Pause, Play) -->
  <Style x:Key="SmallButton" TargetType="Button">
    <Setter Property="BackgroundColor" Value="{StaticResource ButtonIncrease}" />
    <Setter Property="TextColor" Value="White" />
    <Setter Property="FontFamily" Value="MontserratBold" />
    <Setter Property="FontSize" Value="11" />
    <Setter Property="HeightRequest" Value="32" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Padding" Value="15,0" />
  </Style>



  <!-- ============================================ -->
  <!-- CARD & FRAME STYLES                          -->
  <!-- ============================================ -->

  <!-- Standard Card -->
  <Style x:Key="CardFrame" TargetType="Frame">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightCardBackground}, Dark={StaticResource DarkCardBackground}}" />
    <Setter Property="BorderColor" Value="Transparent" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="15" />
    <Setter Property="Margin" Value="0,5" />
    <Setter Property="HasShadow" Value="False" />
  </Style>

  <!-- Counter Display Card -->
  <Style x:Key="CounterCard" TargetType="Frame">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightCardBackground}, Dark={StaticResource DarkCardBackground}}" />
    <Setter Property="BorderColor" Value="Transparent" />
    <Setter Property="CornerRadius" Value="16" />
    <Setter Property="Padding" Value="20" />
    <Setter Property="Margin" Value="0,10" />
    <Setter Property="HasShadow" Value="False" />
  </Style>


  <!-- Project Image Frame -->
  <Style x:Key="ProjectImageFrame" TargetType="Frame">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F3F4F6, Dark=#4B5563}" />
    <Setter Property="BorderColor" Value="Transparent" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="HasShadow" Value="False" />
    <Setter Property="HeightRequest" Value="60" />
    <Setter Property="WidthRequest" Value="60" />
  </Style>

  <!-- ============================================ -->
  <!-- INPUT STYLES                                 -->
  <!-- ============================================ -->

  <!-- Entry Field -->
  <Style x:Key="InputEntry" TargetType="Entry">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightCardBackground}, Dark={StaticResource DarkCardBackground}}" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
    <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}" />
    <Setter Property="FontFamily" Value="MontserratRegular" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="HeightRequest" Value="50" />
  </Style>

  <!-- Editor Field (Multi-line) -->
  <Style x:Key="InputEditor" TargetType="Editor">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightCardBackground}, Dark={StaticResource DarkCardBackground}}" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
    <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}" />
    <Setter Property="FontFamily" Value="MontserratRegular" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="MinimumHeightRequest" Value="100" />
    <Setter Property="AutoSize" Value="TextChanges" />
  </Style>

  <!-- ============================================ -->
  <!-- SEPARATOR / DIVIDER                          -->
  <!-- ============================================ -->

  <Style x:Key="Divider" TargetType="BoxView">
    <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource LightLine}, Dark={StaticResource DarkLine}}" />
    <Setter Property="HeightRequest" Value="1" />
    <Setter Property="HorizontalOptions" Value="FillAndExpand" />
    <Setter Property="Margin" Value="0,10" />
    <Setter Property="Opacity" Value="0.3" />
  </Style>

  <!-- ============================================ -->
  <!-- NAVIGATION TAB STYLES                        -->
  <!-- ============================================ -->

  <Style x:Key="TabLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="MontserratSemiBold" />
    <Setter Property="FontSize" Value="10" />
    <Setter Property="HorizontalOptions" Value="Center" />
    <Setter Property="VerticalOptions" Value="End" />
  </Style>

</ResourceDictionary>
