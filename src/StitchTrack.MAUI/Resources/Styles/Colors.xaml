<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- Brand Colors -->
  <Color x:Key="StitchGold">#D4A847</Color>
  <Color x:Key="StitchPink">#FF69B4</Color>
  <Color x:Key="StitchDarkGray">#3D4A54</Color>
  <Color x:Key="StitchLightGray">#F5F5F5</Color>
  <Color x:Key="StitchMediumGray">#999999</Color>

  <!-- Primary Colors -->
  <Color x:Key="Primary">#D4A847</Color>
  <Color x:Key="PrimaryDark">#B8933D</Color>
  <Color x:Key="Secondary">#FF69B4</Color>
  <Color x:Key="Accent">#FF69B4</Color>

  <!-- Theme-aware Page & Card backgrounds (Light = gold page / white card, Dark = dark page / dark card) -->
  <Color x:Key="PageBackground">#D4A847</Color>
  <Color x:Key="PageBackgroundDark">#121212</Color>
  <Color x:Key="CardBackground">#FFFFFF</Color>
  <Color x:Key="CardBackgroundDark">#1E1E1E</Color>

  <!-- Background Colors -->
  <Color x:Key="CounterBackground">#F5F5F5</Color>

  <!-- Text Colors -->
  <Color x:Key="TextPrimary">#3D4A54</Color>
  <Color x:Key="TextSecondary">#999999</Color>
  <Color x:Key="TextOnGold">#FFFFFF</Color>

  <!-- Button Colors -->
  <Color x:Key="ButtonIncrease">#FF69B4</Color>
  <Color x:Key="ButtonDecrease">#3D4A54</Color>
  <Color x:Key="ButtonDisabled">#CCCCCC</Color>

  <!-- Project Color Tags -->
  <Color x:Key="ColorTag1">#3D4A54</Color>
  <Color x:Key="ColorTag2">#9B59B6</Color>
  <Color x:Key="ColorTag3">#3498DB</Color>
  <Color x:Key="ColorTag4">#2ECC71</Color>
  <Color x:Key="ColorTag5">#F1C40F</Color>
  <Color x:Key="ColorTag6">#E67E22</Color>
  <Color x:Key="ColorTag7">#E74C3C</Color>

  <!-- Status Colors -->
  <Color x:Key="SuccessGreen">#2ECC71</Color>
  <Color x:Key="WarningYellow">#F39C12</Color>
  <Color x:Key="ErrorRed">#E74C3C</Color>

  <!-- Keep legacy colors for backwards compatibility -->
  <Color x:Key="White">White</Color>
  <Color x:Key="Black">Black</Color>
  <Color x:Key="Gray100">#F5F5F5</Color>
  <Color x:Key="Gray200">#E0E0E0</Color>
  <Color x:Key="Gray300">#CCCCCC</Color>
  <Color x:Key="Gray400">#999999</Color>
  <Color x:Key="Gray500">#777777</Color>
  <Color x:Key="Gray600">#555555</Color>
  <Color x:Key="Gray900">#3D4A54</Color>

  <!-- Brushes (optional convenience) -->
  <SolidColorBrush x:Key="PageBackgroundBrush" Color="{DynamicResource PageBackground}" />
  <SolidColorBrush x:Key="PageBackgroundDarkBrush" Color="{DynamicResource PageBackgroundDark}" />
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="{DynamicResource CardBackground}" />
  <SolidColorBrush x:Key="CardBackgroundDarkBrush" Color="{DynamicResource CardBackgroundDark}" />
  <SolidColorBrush x:Key="StitchGoldBrush" Color="{StaticResource StitchGold}" />
  <SolidColorBrush x:Key="StitchPinkBrush" Color="{StaticResource StitchPink}" />
  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
  <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />

</ResourceDictionary>
