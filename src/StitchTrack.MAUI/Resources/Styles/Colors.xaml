<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- ============================================ -->
  <!-- BRAND COLORS (Same in Light & Dark)          -->
  <!-- ============================================ -->
  <Color x:Key="BrandGold">#E1AD37</Color>
  <Color x:Key="BrandCancel">#EB9057</Color>

  <!-- ============================================ -->
  <!-- LIGHT MODE COLORS                            -->
  <!-- ============================================ -->
  <Color x:Key="LightPageBackground">#FDFBF5</Color>
  <Color x:Key="LightAppBackground">#E1AD37</Color>
  <Color x:Key="LightTextPrimary">#424B54</Color>
  <Color x:Key="LightTextSecondary">#6B7280</Color>
  <Color x:Key="LightLine">#E1AD37</Color>
  <Color x:Key="LightCardBackground">#F5EDD3</Color>
  <Color x:Key="LightIconColor">#424B54</Color>

  <!-- ============================================ -->
  <!-- DARK MODE COLORS                             -->
  <!-- ============================================ -->
  <Color x:Key="DarkPageBackground">#686F76</Color>
  <Color x:Key="DarkAppBackground">#424B54</Color>
  <Color x:Key="DarkTextPrimary">#FFFFFF</Color>
  <Color x:Key="DarkTextSecondary">#D1D5DB</Color>
  <Color x:Key="DarkLine">#424B54</Color>
  <Color x:Key="DarkCardBackground">#525A63</Color>
  <Color x:Key="DarkIconColor">#FFFFFF</Color>

  <!-- ============================================ -->
  <!-- THEME-AWARE COLORS (Switch Automatically)    -->
  <!-- Use AppThemeBinding in XAML where needed     -->
  <!-- ============================================ -->

  <Color x:Key="TextPrimary">#424B54</Color>
  <Color x:Key="TextSecondary">#6B7280</Color>
  <Color x:Key="TextWhite">#ffffff</Color>

  <!-- ============================================ -->
  <!-- BUTTON COLORS (Same in Both Modes)           -->
  <!-- ============================================ -->
  <Color x:Key="ButtonIncrease">#E1AD37</Color>
  <Color x:Key="ButtonDecrease">#424B54</Color>
  <Color x:Key="ButtonCancel">#EB9057</Color>
  <Color x:Key="ButtonPrimary">#E1AD37</Color>
  <Color x:Key="ButtonSecondary">#424B54</Color>
  <Color x:Key="ButtonTextOnGold">#FFFFFF</Color>
  <Color x:Key="ButtonTextOnDark">#FFFFFF</Color>

  <!-- ============================================ -->
  <!-- NAVIGATION COLORS                            -->
  <!-- ============================================ -->
  <Color x:Key="NavBackground">#d39d55</Color>
  <Color x:Key="NavTextUnselected">#FFFFFF</Color>
  <Color x:Key="NavTextSelected">#424B54</Color>
  <Color x:Key="NavIconUnselected">#FFFFFF</Color>
  <Color x:Key="NavIconSelected">#424B54</Color>

  <!-- ============================================ -->
  <!-- SEMANTIC COLORS                              -->
  <!-- ============================================ -->
  <Color x:Key="SuccessGreen">#10B981</Color>
  <Color x:Key="ErrorRed">#EF4444</Color>
  <Color x:Key="WarningYellow">#F59E0B</Color>
  <Color x:Key="InfoBlue">#3B82F6</Color>
  <Color x:Key="BrandSave">#16697A</Color>
  <Color x:Key="SecondaryGold">#d39d55</Color>
  <Color x:Key="LightGreen">#d6cfb4</Color>
  <Color x:Key="DarkGreen">#606C5D</Color>

</ResourceDictionary>
