<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:styles="clr-namespace:StitchTrack.MAUI.Resources.Styles"
             xmlns:local="clr-namespace:StitchTrack.MAUI"
             xmlns:converters="clr-namespace:StitchTrack.MAUI.Converters"
             x:Class="StitchTrack.MAUI.App">
  <Application.Resources>
    <ResourceDictionary>

      <!-- Merge the light theme dictionary by default (swap to DarkColors at runtime) -->
      <ResourceDictionary.MergedDictionaries>
        <styles:LightColors />
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Converters -->
      <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
      <converters:RelativeTimeConverter x:Key="RelativeTimeConverter" />

      <!-- Add your custom font styles here -->
      <Style TargetType="Label">
        <Setter Property="FontFamily" Value="MontserratRegular" />
      </Style>

      <Style TargetType="Button">
        <Setter Property="FontFamily" Value="MontserratSemiBold" />
      </Style>

    </ResourceDictionary>
  </Application.Resources>
</Application>
