<?xml version="1.0" encoding="UTF-8" ?>
<Shell
  x:Class="StitchTrack.MAUI.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:local="clr-namespace:StitchTrack.MAUI.Views"
  xmlns:views="clr-namespace:StitchTrack.MAUI.Views"
  Shell.FlyoutBehavior="Disabled"
  Shell.NavBarIsVisible="False">

  <!-- Apply theme-aware colors -->
  <Shell.TabBarBackgroundColor>
    <AppThemeBinding Light="#E1AD37" Dark="#424B54" />
  </Shell.TabBarBackgroundColor>

  <Shell.TabBarForegroundColor>
    <AppThemeBinding Light="#424B54" Dark="#E1AD37" />
  </Shell.TabBarForegroundColor>

  <Shell.TabBarTitleColor>
    <AppThemeBinding Light="#424B54" Dark="#E1AD37" />
    </Shell.TabBarTitleColor>

    <Shell.TabBarUnselectedColor>
      <AppThemeBinding Light="#FFFFFF" Dark="#D1D5DB" />
    </Shell.TabBarUnselectedColor>

    <!-- 
  BOTTOM NAVIGATION STYLING:
  - Light Mode: Golden background, dark selected, white unselected
  - Dark Mode:  Dark grey background, white selected, light grey unselected
  - Shadow on top: Subtle (handled by platform)
  -->

    <TabBar>

      <!-- COUNTER TAB -->
      <Tab Title="COUNTER" Icon="counter.svg">
        <ShellContent Route="counter"
                      ContentTemplate="{DataTemplate views:QuickCounterPage}" />
      </Tab>

      <!-- PROJECTS TAB -->
      <Tab Title="PROJECTS" Icon="projects.svg">
        <ShellContent Route="projects"
                      ContentTemplate="{DataTemplate views:ProjectsPage}" />
      </Tab>

      <!-- SESSION TAB -->
      <Tab Title="SESSION" Icon="session. svg">
        <ShellContent Route="session"
                      ContentTemplate="{DataTemplate views:SessionsPage}" />
      </Tab>

      <!-- EXPORT TAB -->
      <Tab Title="EXPORT" Icon="export. svg">
        <ShellContent Route="export"
                      ContentTemplate="{DataTemplate views:ExportPage}" />
      </Tab>

      <!-- SETTINGS TAB -->
      <Tab Title="SETTINGS" Icon="settings. svg">
        <ShellContent Route="settings"
                      ContentTemplate="{DataTemplate views:SettingsPage}" />
      </Tab>
  </TabBar>

</Shell>
