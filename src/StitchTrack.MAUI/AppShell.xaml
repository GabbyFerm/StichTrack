<?xml version="1.0" encoding="UTF-8" ?>
<Shell
  x:Class="StitchTrack.MAUI.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:local="clr-namespace:StitchTrack.MAUI.Views"
  xmlns:views="clr-namespace:StitchTrack.MAUI.Views"
  Shell.FlyoutBehavior="Disabled"
  Shell.NavBarIsVisible="False">

  <!-- Apply theme-aware colors -->
  <Shell.TabBarBackgroundColor>
    <AppThemeBinding Light="#E1AD37" Dark="#424B54" />
  </Shell.TabBarBackgroundColor>

  <Shell.TabBarForegroundColor>
    <AppThemeBinding Light="#424B54" Dark="#E1AD37" />
  </Shell.TabBarForegroundColor>

  <Shell.TabBarTitleColor>
    <AppThemeBinding Light="#424B54" Dark="#E1AD37" />
    </Shell.TabBarTitleColor>

    <Shell.TabBarUnselectedColor>
      <AppThemeBinding Light="#FFFFFF" Dark="#D1D5DB" />
    </Shell.TabBarUnselectedColor>

    <!-- 
  BOTTOM NAVIGATION STYLING:
  - Light Mode: Golden background, dark selected, white unselected
  - Dark Mode:  Dark grey background, white selected, light grey unselected
  - Shadow on top: Subtle (handled by platform)
  -->

    <TabBar>

    <!-- COUNTER TAB -->
    <ShellContent
      Title="COUNTER"
      ContentTemplate="{DataTemplate views:QuickCounterPage}"
      Route="QuickCounterPage"
      Icon="counter.svg" />

    <!-- PROJECTS TAB -->
    <ShellContent
      Title="PROJECTS"
      ContentTemplate="{DataTemplate views:ProjectsPage}"
      Route="ProjectsPage"
      Icon="projects.svg" />

    <!-- SESSION TAB -->
    <ShellContent
      Title="SESSION"
      ContentTemplate="{DataTemplate local:SessionsPage}"
      Route="SessionPage"
      Icon="session.svg" />

    <!-- EXPORT TAB -->
    <ShellContent
      Title="EXPORT"
      ContentTemplate="{DataTemplate local:ExportPage}"
      Route="ExportPage"
      Icon="export.svg" />

    <!-- SETTINGS TAB -->
    <ShellContent
      Title="SETTINGS"
      ContentTemplate="{DataTemplate local:SettingsPage}"
      Route="SettingsPage"
      Icon="settings.svg" />

  </TabBar>

</Shell>
