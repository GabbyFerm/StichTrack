<?xml version="1.0" encoding="UTF-8" ?>
<Shell
  x:Class="StitchTrack.MAUI.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:local="clr-namespace:StitchTrack.MAUI.Views"
  Shell.FlyoutBehavior="Disabled"
  Shell.NavBarIsVisible="True">

  <!-- Custom header with sync status -->
  <Shell.TitleView>
    <Grid ColumnDefinitions="*, Auto" Padding="10,0">
      <Label Grid.Column="0" 
             Text="StitchTrack" 
             FontSize="18" 
             FontAttributes="Bold"
             VerticalOptions="Center"/>
      <Image Grid.Column="1"
             Source="cloud_off.png"
             WidthRequest="24"
             HeightRequest="24"
             VerticalOptions="Center"/>
    </Grid>
  </Shell.TitleView>

  <TabBar>
    <ShellContent
      Title="Counter"
      Icon="counter_icon.png"
      ContentTemplate="{DataTemplate local:GuestCounterPage}"
      Route="Counter" />

    <ShellContent
      Title="Projects"
      Icon="projects_icon.png"
      ContentTemplate="{DataTemplate local:ProjectsPage}"
      Route="Projects" />

    <ShellContent
      Title="Sessions"
      Icon="timer_icon.png"
      ContentTemplate="{DataTemplate local:SessionsPage}"
      Route="Sessions" />

    <ShellContent
      Title="Export"
      Icon="export_icon.png"
      ContentTemplate="{DataTemplate local:ExportPage}"
      Route="Export" />

    <ShellContent
      Title="Settings"
      Icon="settings_icon.png"
      ContentTemplate="{DataTemplate local:SettingsPage}"
      Route="Settings" />
  </TabBar>

</Shell>
