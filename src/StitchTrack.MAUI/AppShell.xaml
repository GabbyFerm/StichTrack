<?xml version="1.0" encoding="UTF-8" ?>
<Shell
  x:Class="StitchTrack.MAUI.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:local="clr-namespace:StitchTrack.MAUI.Views"
  Shell.FlyoutBehavior="Disabled"
  Shell.NavBarIsVisible="False"
  Shell.TabBarBackgroundColor="#E1AD37"
  Shell.TabBarForegroundColor="#424B54"
  Shell.TabBarTitleColor="#424B54"
  Shell.TabBarUnselectedColor="White">

  <!-- 
  BOTTOM NAVIGATION STYLING:
  - Background: Golden (#E1AD37)
  - Unselected: White text + icons
  - Selected: Dark gray (#424B54) text + icons
  - Shadow on top: Subtle (handled by platform)
  -->

  <TabBar>

    <!-- COUNTER TAB -->
    <ShellContent
      Title="COUNTER"
      ContentTemplate="{DataTemplate local:QuickCounterPage}"
      Route="QuickCounterPage"
      Icon="counter.svg" />

    <!-- PROJECTS TAB -->
    <ShellContent
      Title="PROJECTS"
      ContentTemplate="{DataTemplate local:ProjectsPage}"
      Route="ProjectsPage"
      Icon="projects.svg" />

    <!-- SESSION TAB -->
    <ShellContent
      Title="SESSION"
      ContentTemplate="{DataTemplate local:SessionsPage}"
      Route="SessionPage"
      Icon="session.svg" />

    <!-- EXPORT TAB -->
    <ShellContent
      Title="EXPORT"
      ContentTemplate="{DataTemplate local:ExportPage}"
      Route="ExportPage"
      Icon="export.svg" />

    <!-- SETTINGS TAB -->
    <ShellContent
      Title="SETTINGS"
      ContentTemplate="{DataTemplate local:SettingsPage}"
      Route="SettingsPage"
      Icon="settings.svg" />

  </TabBar>

</Shell>
